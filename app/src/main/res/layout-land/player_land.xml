<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/tabs">
    <TextView
        android:text="Now Playing"
        android:id="@+id/now_playing"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/now_playing"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/now_playing"
        android:background="@android:color/white"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/player_image"
        android:layout_width="300dp"
        android:layout_height="150dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/player_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp">

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/sms"
        android:id="@+id/sms"/>

    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/play_pause_background"
        android:background="@drawable/button_background"
        android:layout_marginTop="10dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:max="500"
            android:progress="0" />

        <Button
            android:id="@+id/button_toggle_playback"
            android:background="@drawable/play"
            android:layout_width="35dp"
            android:layout_centerInParent="true"
            android:layout_height="35dp"
            />

    </RelativeLayout>

    <Button
        android:background="@drawable/ic_share"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/share_button"/>

    </LinearLayout>

</RelativeLayout>
